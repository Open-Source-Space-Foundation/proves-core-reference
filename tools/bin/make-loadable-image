#!/bin/bash
DIRNAME="$(cd "$(dirname $BASH_SOURCE)"; pwd)"
ZEPHYR="${ZEPHYR_BASE:-${DIRNAME}/../../lib/zephyr-workspace/zephyr}"

# Check arguments
if (( $# != 2 ))
then
    echo "$0 <input.signed.bin> <output.uf2>"
    exit 0
fi

python3 ${ZEPHYR}/scripts/build/uf2conv.py -c -f 0xe48bff57 -b 0x10100000 -o "$2" "$1"
